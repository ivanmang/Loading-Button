<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <com.udacity.LoadingButton
        android:id="@+id/custom_button"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_margin="20dp"
        app:buttonColor="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:text="@string/button_name"
        app:textColor="@color/white"
        app:loadingColor="@color/colorPrimaryDark"
        app:loadingText="@string/button_loading"/>

    <RadioButton
        android:id="@+id/glide_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/glide_button_text"
        app:layout_constraintBottom_toTopOf="@+id/load_app_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_chainStyle="packed" />

    <RadioButton
        android:id="@+id/load_app_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/loadingapp_button_text"
        app:layout_constraintBottom_toTopOf="@+id/retrofit_button"
        app:layout_constraintStart_toStartOf="@+id/glide_button"
        app:layout_constraintTop_toBottomOf="@+id/glide_button" />

    <RadioButton
        android:id="@+id/retrofit_button"
        style="@style/Widget.AppCompat.CompoundButton.RadioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/retrofit_button_text"
        android:textAlignment="viewStart"
        app:layout_constraintBottom_toTopOf="@+id/custom_button"
        app:layout_constraintStart_toStartOf="@+id/load_app_button"
        app:layout_constraintTop_toBottomOf="@+id/load_app_button" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="198dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_cloud_download_24" />

</androidx.constraintlayout.widget.ConstraintLayout>